<% if @user == current_user %>
  <h1>Welcome, <%= @user.username %>!</h1>

  <p>You are <%= @user.firstname + " " + @user.lastname %>.</p>
  <p>Your registered email is <%= @user.email %>.</p>
<% else %>
  <h1>User Profile: <%= @user.username %></h1>
<% end %>

<p>View <%= link_to 'Readers', readers_path(user_id: params[:id]) %>.</p>
<p>View <%= link_to 'Rosters', rosters_path(user_id: params[:id]) %>.</p>

<p>View a list of all registered <%= link_to 'Reading Coaches', users_path %>.</p>